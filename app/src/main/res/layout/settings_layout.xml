<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="#306d97"
            android:clickable="true" >

        <RelativeLayout
                android:layout_width="53dp"
                android:layout_height="fill_parent"
                android:background="@drawable/button_selector"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:id="@+id/settings_layout_back">
            <ImageView
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/capture_layout_about_icon"
                    android:background="@drawable/back">
            </ImageView>

            <TextView
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:background="#306d97">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
                android:layout_height="fill_parent"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/settings_layout_back">

            <TextView
                    android:id="@+id/settings_layout_header_text"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:text="Settings">
            </TextView>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="53dp"
                android:layout_height="fill_parent"
                android:background="@drawable/button_selector"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:id="@+id/settings_layout_test_print">
            <ImageView
                    android:layout_height="32dp"
                    android:layout_width="32dp"
                    android:layout_centerInParent="true"
                    android:id="@+id/capture_layout_send_icon"
                    android:background="@drawable/done">
            </ImageView>


            <TextView
                    android:id="@+id/tab_splitter"
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#306d97">
            </TextView>
        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/settings_printer_bluetooth_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Printer address"
                    android:textColor="#4a4a4a"
                    android:textSize="20dp" >
                </TextView>

                <EditText
                    android:id="@+id/settings_layout_printer_address_text"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:textCursorDrawable="@null"
                    android:textColor="#4a4a4a"
                    android:background="@drawable/text_filed_shape"
                    android:layout_marginRight="20dp"
                    android:inputType="text"
                    android:textSize="18dp" >
                </EditText>

            </LinearLayout>




        </LinearLayout>
    </ScrollView>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_gravity="bottom"
            android:background="#333333" >

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

            <RelativeLayout
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/done_button_selector"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:id="@+id/settings_layout_save">
                <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/capture_layout_clear_icon"
                        android:text="Save">
                </TextView>
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>