<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
            android:state_focused="false"
            android:state_pressed="true">

        <shape
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">

            <gradient
                android:startColor="#dddada"
                android:endColor="#dddada"
                android:angle="270" />


            <stroke android:width="0dip" android:color="#FF457ab1"/>

            <corners
                android:radius="25dp"/>
        </shape>

    </item>

    <item
            android:state_focused="false"
            android:state_pressed="false">

        <shape
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="rectangle">

            <gradient
                    android:startColor="#ffffff"
                    android:endColor="#ffffff"
                    android:angle="270"/>

            <stroke android:width="0dip" android:color="#FF306d97"/>

            <corners
                    android:radius="25dp"/>

        </shape>

    </item>
</selector>
